{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitThis": true,
        "declaration": true,
        "sourceMap": true,
        "pretty": true,
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./lib",
        "lib": ["es2017"]
    },
    "include": [
        "src/**/*.ts",
        "custom_typings/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
